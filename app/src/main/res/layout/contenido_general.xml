<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/rosado"
>

        <ImageButton
            android:id="@+id/navigation_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:onClick="onBackPressed"
            android:scaleType="fitCenter"
            android:src="@drawable/patra"
            android:layout_gravity="start|center_vertical" />

        <TextView
            android:id="@+id/seccion_aprender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ojos"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center" />

        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="9dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/settings"
            android:scaleType="centerInside"
            android:adjustViewBounds="true" />
    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="604dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Titulo_Contenido"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="255dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:src="@drawable/comer" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="303dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="4dp"
                android:text="Lorem isum dolor sit amet, consectetur adipiscing elit. Dsum dolor sit amet, consectetur adipiscing elit. Dsum dolor sit amet, consectetur adipiscing elit. Dsum dolor sit amet, consectetur adipiscing elit. Dsum dolor sit amet, consectetur adipiscing elit. Dsum dolor sit amet, consectetur adipiscing elit. Dsum dolor sit amet, consectetur adipiscing elit. Dsum dolor sit amet, consectetur adipiscing elit. Dsum dolor sit amet, consectetur adipiscing elit. Dsum dolor sit amet, consectetur adipiscing elit. Dpsum dolor sit amet, consectetur adipiscing elit. Duis at magna lacinia, rutrum nibh et, fermentum turpis. Curabitur aliquet tristique luctus. Interdum et malesuada fames ac ante ipsum primis in faucibus. Ut dignissim sodales libero, a condimentum dolor ornare quis. Vestibulum enim odio, ornare fringilla sodales eget, semper eget massa. In hac habitasse platea dictumst. Phasellus imperdiet et magna vitae pulvinar." />
        </ScrollView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/rosado"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onHomeClick">

            <ImageView
                android:id="@+id/home_boton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/selector_home" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onAprenderClick">

            <ImageView
                android:id="@+id/aprender_boton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_book"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onMiBebeClick">

            <ImageView
                android:id="@+id/bebe_boton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_moodboy"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onPerfilClick">

            <ImageView
                android:id="@+id/perfil_boton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_personaa"
                android:layout_gravity="center" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
