<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/rosado"
>

        <ImageButton
            android:id="@+id/navigation_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:onClick="navigateBack"
            android:scaleType="fitCenter"
            android:src="@drawable/patra"
            android:layout_gravity="start|center_vertical" />

        <TextView
            android:id="@+id/seccion_aprender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/espalda"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center" />

        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="9dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/settings"
            android:onClick="navigateSettings"
            android:scaleType="centerInside"
            android:adjustViewBounds="true" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="547dp"
        android:orientation="vertical"
        android:padding="12dp"
        android:paddingTop="16dp"
        android:paddingBottom="13dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/azu"
            android:onClick="onHidratacionEspaldaBebeClick"
            android:text="Hidratación de Espalda"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:cornerRadius="8dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Limpieza Diaria"
            android:textColor="@color/white"
            app:cornerRadius="8dp"
            android:textSize="18sp"
            android:backgroundTint="@color/azu"
            android:layout_marginBottom="8dp"
            android:onClick="onLimpiezaDiariaClick"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masajes Relajantes"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:cornerRadius="8dp"
            android:backgroundTint="@color/azu"
            android:layout_marginBottom="8dp"
            android:onClick="onMasajesRelajantesClick"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cuidados Post-Baño"
            android:textColor="@color/white"
            app:cornerRadius="8dp"
            android:textSize="18sp"
            android:backgroundTint="@color/azu"
            android:layout_marginBottom="8dp"
            android:onClick="onCuidadosPostBanoClick"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Protección Contra Rozaduras"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:cornerRadius="8dp"
            android:backgroundTint="@color/azu"
            android:layout_marginBottom="8dp"
            android:onClick="onProteccionRozadurasClick"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Productos Recomendados"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:cornerRadius="8dp"
            android:backgroundTint="@color/azu"
            android:layout_marginBottom="8dp"
            android:onClick="onProductosRecomendadosClick"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cuidados Nocturnos"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:cornerRadius="8dp"
            android:backgroundTint="@color/azu"
            android:layout_marginBottom="8dp"
            android:onClick="onCuidadosNocturnosClick"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cuidados Diarios"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:backgroundTint="@color/azu"
            android:layout_marginBottom="8dp"
            app:cornerRadius="8dp"
            android:onClick="onCuidadosDiariosClick"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tratamientos Especiales"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:backgroundTint="@color/azu"
            android:layout_marginBottom="16dp"
            app:cornerRadius="8dp"
            android:onClick="onTratamientosEspecialesClick"/>


    </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/rosado"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onHomeClick">

            <ImageView
                android:id="@+id/home_boton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/selector_home" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onAprenderClick">

            <ImageView
                android:id="@+id/aprender_boton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_book"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onMiBebeClick">

            <ImageView
                android:id="@+id/bebe_boton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_moodboy"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onPerfilClick">

            <ImageView
                android:id="@+id/perfil_boton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selector_personaa"
                android:layout_gravity="center" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
